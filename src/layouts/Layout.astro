---
import Avatar from '../components/Avatar.astro';
import Text from '../components/Text.astro';
import Title from '../components/Title.astro';
import Subtitle from '../components/Subtitle.astro';
import Skills from '../components/Skills.astro';
import Projects from '../components/Projects.astro';
import Experience from '../components/Experience.astro';
import Educations from '../components/Educations.astro';
import Social from '../components/Social.astro';
import site from '../config/cv.json';
const { frontmatter } = Astro.props;
import { Icon } from '@astrojs/starlight/components';
---

<html lang={site.siteLanguage}>
	<head>
		<title>{site.siteTitle}</title>
		<meta charset="UTF-8" />
		<meta name="description" content={site.siteDescription} />
		<meta name="keywords" content={site.siteKeywords} />
		<meta name="author" content={site.siteAuthor} />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="../../public/styles/global.css" />
		<link rel="stylesheet" href="../../public/styles/w3.css" />
		<!-- <link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css?family=Roboto&display=swap"
		/> -->
		<link rel="stylesheet" href="//at.alicdn.com/t/c/font_4373726_7mwi3g8dc2u.css" />
		<!-- <link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
		/> -->
	</head>

	<body class="w3-light-grey">
		<!-- 主页按钮 -->
		<div class="backBtn" style="position: fixed; right: 10px; z-index: 99;">
			<a href="/"><Icon name="left-arrow" color="#292b2f" size="3.5rem" /></a>
		</div>
		<!-- Page Container -->
		<div class="w3-content w3-margin-top" style="max-width:1350px; margin-bottom: 40px">
			<!-- The Grid -->
			<div class="w3-row-padding">
				<!-- Left Column -->
				<div class="w3-third">
					<div class="w3-white w3-text-grey w3-card-4">
						<Avatar name={frontmatter.name} image={frontmatter.image} />
						<div class="w3-container">
							<Text text={frontmatter.function} icon="iconfont icon-gongwenbao-L" />
							<Text text={frontmatter.address} icon="iconfont icon-dizhi" />
							<Text
								text={frontmatter.email}
								icon="iconfont iconfont icon-dianziyoujian"
							/>
							<Text text={frontmatter.telephone} icon="iconfont icon-dianhua" />
							<hr />
							<Subtitle text="教育经历" icon="iconfont icon-biyeshixi" />
							<Educations lists={frontmatter.educations} />
							<hr />
							<!-- <br /> -->
							<Subtitle text="专业技能" icon="iconfont icon-jinengfen" />
							<Skills lists={frontmatter.skills} />
							<br />
							<!-- <div>
								基础技能：
								<div>
									●
									熟悉JavaScript语言，能够使用原生JavaScript进行开发和优化，熟悉ES6+特性。
								</div>
								<div>
									●熟练使用HTML5和CSS3，熟悉各种布局方式，了解响应式设计和Flexbox布局。
								</div>
								 ●了解TypeScript语法、了解Spring Boot框架的使用。
								<div>前端框架：</div>
								<div>●熟悉Vue.js框架，具备构建复杂单页面应用的能力。</div>
								<div>● 熟悉uni-app、微信小程序开发，能够完成多端应用开发。</div>
								 ● 熟悉使用Element UI、Ant Design等UI框架。
								<div>效率工具：</div>
								<div>● 了解Webpack构建打包工具，熟练使用Git 版本控制。</div>
								<div>● 熟练使用Apifox或Postman进行接口调试。</div>
							</div> -->
						</div>
					</div><br />

					<!-- End Left Column -->
				</div>

				<!-- Right Column -->
				<div class="w3-twothird">
					<div class="w3-container w3-card w3-white w3-margin-bottom">
						<Title text="工作经历" icon="iconfont icon-gongzuojingyan" />
						<Experience lists={frontmatter.experiences} />
					</div>

					<div class="w3-container w3-card w3-white">
						<Title text="项目经历" icon="iconfont icon-gongzuojingyan" />
						<Projects lists={frontmatter.projects} />
					</div>

					<!-- End Right Column -->
				</div>

				<!-- End Grid -->
			</div>

			<!-- End Page Container -->
		</div>
		<!-- <footer class="w3-container w3-teal w3-center w3-margin-top">
				<Social lists={frontmatter.social} />
				<p>
					Powered by <a href="https://github.com/dofbi/astro-cv-theme" target="_blank"
						>dofbi</a
					>
				</p>
